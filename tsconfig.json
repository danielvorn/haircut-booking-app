{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "resolveJsonModule": true /* in case you are importing JSON files */,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["src/typings"],
    "skipLibCheck": true
  },
  "include": ["src", "package.json", "passport.ts", "utils", "src/typings"],
  "exclude": ["src/**/*.test.ts"]
}
